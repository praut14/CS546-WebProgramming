<div id="signup-div">
  <div id="signup-form-div">
    <form
      id="signup-form"
      class="main-content"
      method="POST"
      action="/register"
    >
      <h1>{{title}}</h1>
      <img src="../public/car.png" alt="Renting a car" />

      <label for="email">Email</label>
      <input
        placeholder="name@example.com"
        name="email"
        id="email"
        required
        pattern="[^ @]*@[^ @]*"
      />

      <label for="hashPassword">Password</label>
      <input
        type="password"
        placeholder="password - minimum 8 characters"
        id="hashPassword"
        name="hashPassword"
        minlength="8"
        required
      />

      <label for="firstName">First Name</label>
      <input
        placeholder="Enter your first name"
        name="firstName"
        id="firstName"
        required
      />

      <label for="lastName">Last Name</label>
      <input
        placeholder="Enter your last name"
        name="lastName"
        id="lastName"
        required
      />

      <label for="age">Age</label>
      <input
        type="number"
        placeholder="Enter your age"
        name="age"
        id="age"
        required
      />

      <label for="gender">Gender</label>
      <select name="gender" id="gender">
        <option value="default" disabled selected hidden>Please Choose...</option>
        <option value="female">Female</option>
        <option value="male">Male</option>
        <option value="transgender">Transgender</option>
        <option value="genderNeutral">Gender Neutral</option>
        <option value="nonBinary">Non Binary</option>
        <option value="other">Other</option>
      </select>

      <label for="city">City</label>
      <input placeholder="Enter your city" name="city" id="city" required />

      <label for="state">State</label>
      <input placeholder="Enter your state" name="state" id="state" required />

      <label for="lincenceNumber">Lincence Number</label>
      <input
        {{!-- type="password" --}}
        placeholder="Please enter 15 digit lincence number"
        id="lincenceNumber"
        name="lincenceNumber"
        minlength="15"
        required
      />
      <button type="submit">SignUp</button>

      {{! <p>Verify your account<a href="mailto:pmahaja4@stevens.edu">TO Email</a></p> }}
      {{! <button onclick="sendMail()">Send</button> }}
      {{!-- TO-DO will remove the comment after implementation --}}

       <p>Already have an account? <a href="/login">Login</a></p>

      <div class="signup-error-div"></div>

      {{#if error}}
        <p class="error">{{error}}</p>
      {{/if}}

    </form>
  </div>

</div>

